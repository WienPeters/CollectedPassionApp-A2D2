<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CollectedPassionApp_A2D2.MVVM.ViewModels"
             x:Class="CollectedPassionApp_A2D2.MVVM.Views.Collector.ProfileSetupage"
             Shell.FlyoutBehavior="Disabled" Shell.NavBarIsVisible="False" BackgroundColor="#42a840" >
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Setting up your profile"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Edit name"/>
        <Entry x:Name="ENTName"/>
        <Label Text="Edit Username"/>
        <Entry x:Name="ENTUserName"/>

        <Label Text="Edit Email"/>
        <Entry x:Name="ENTEmail"/>


        <Label Text="Edit Wachtwoord"/>
        <Entry x:Name="ENTPassword" IsPassword="True"/>

        <Button x:Name="BTNGetLocation" Text="Adres invullen" Clicked="BTNGetLocation_Clicked"      />
        <Label x:Name="LBLocatie" Text=" "/>
        <Label Text="adres"/>
        <Entry x:Name="ENTAdres"/>
        <Label Text="Stadsnaam"/>
        <Entry x:Name="ENTNaamstad"/>
        <Button x:Name="BTNSaveprofilechange" Text="Save the changes u made" Clicked="BTNSaveprofilechange_Clicked"   />

    </VerticalStackLayout>
</ContentPage>