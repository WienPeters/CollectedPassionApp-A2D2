<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CollectedPassionApp_A2D2.MVVM.ViewModels"
             x:Class="CollectedPassionApp_A2D2.MVVM.Views.Collector.MyMarketplaceView"
             Shell.FlyoutBehavior="Disabled" Shell.NavBarIsVisible="False" BackgroundColor="#42a840" >
    <ContentPage.BindingContext>
        <vm:MarketViewModel    />
    </ContentPage.BindingContext>
    <StackLayout>
        
        <Button x:Name="BTNAddMarketitem" Text="Put a Marketitem up for sale" Clicked="BTNAddMarketitem_Clicked"  />
        <Button x:Name="BTNDeleteMarketitem" Text="Delete selected marketitem" Command="{Binding DeleteAdvertItem}" />
        <ListView  ItemsSource="{Binding MItems}" SelectedItem="{Binding SelectedCel4sell}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell TextColor="MidnightBlue" Text="{Binding Name}" Detail="{Binding Description}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
   
</ContentPage>