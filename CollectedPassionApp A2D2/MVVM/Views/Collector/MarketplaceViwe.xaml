<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CollectedPassionApp_A2D2.MVVM.ViewModels"
             x:Class="CollectedPassionApp_A2D2.MVVM.Views.Collector.MarketplaceViwe"
             Shell.FlyoutBehavior="Disabled"
                Shell.NavBarIsVisible="False"
            BackgroundColor="Green">
    <ContentPage.BackgroundColor>
        <Color>#42a840</Color>
    </ContentPage.BackgroundColor>
    <ContentPage.BindingContext>
        <vm:MarketViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <SearchBar x:Name="SRCHMarketplaceExternal" Placeholder="Search 4 way more..." SearchCommand="{Binding SearchCommand}"
                  SearchButtonPressed="OnSearchButtonPressed"   />
        
        <Image Source="{Binding ImagePath}" WidthRequest="350" HeightRequest="200" Aspect="AspectFit" />
        <Button x:Name="BTNAddMarketitem" Text="Add marketitem for sale" Clicked="BTNAddMarketitem_Clicked"  />
        <ListView x:Name="LISTVCollection" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always" 
        SelectedItem="{Binding ItemSelected , Mode=TwoWay}"  ItemsSource="{Binding Items}">
            
            <ListView.ItemTemplate>
                <DataTemplate >
                    
                    <TextCell Text="{Binding userId}" Detail="{Binding categoryId}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
</ContentPage>