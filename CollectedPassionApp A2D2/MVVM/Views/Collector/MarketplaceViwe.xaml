<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CollectedPassionApp_A2D2.MVVM.ViewModels"
             x:Class="CollectedPassionApp_A2D2.MVVM.Views.Collector.MarketplaceViwe"
             Title="MarketplaceViwe">
    <ContentPage.BindingContext>
        <vm:MarketViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Button x:Name="BTNAddMarketitem" Text="Add a marketitem on page" Clicked="BTNAddMarketitem_Clicked"  />
        <SearchBar x:Name="SEARchbar" Placeholder="Search wanted item" />
        <Image Source="{Binding ImagePath}" WidthRequest="350" HeightRequest="200" Aspect="AspectFit" />
        <ListView x:Name="LISTVCollection" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always" 
        SelectedItem="{Binding ItemSelected, Mode=TwoWay}" ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <TextCell Text="{Binding Name}" Detail="{Binding price}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>